{
	"name": "Customer",
	"base": "User",
	"strict": true,
	"options": {
		"mongodb": {
			"collection": "Customers"
		},
		"validateUpsert": true
	},
	"properties": {
		"username": false,
		"realm": false,
		"credentials": false,
		"challenges": false,
		"status": false,
		"created": false,
		"lastUpdated": false,

		"_id": {
			"type": "ObjectId",
			"generated": true,
			"id": true
		},
		"firstName": {
			"type": "String",
			"required": true
		},
		"lastName": {
			"type": "String",
			"required": true
		},
		"timeZone": {
			"type": "String",
			"default": ""
		},
		"description": {
			"type": "String",
			"default": ""
		},
		"avatar": {
			"type": "String",
			"default": "/Containers/default-avatar/download/male.png"
		}
	},
	"mixins": {
		"TimeStamp": true
	},
	"hidden": ["createdAt", "updatedAt"],
	"protected": ["email", "emailVerified", "verificationToken", "balance"],
	"validations": [],
	"relations": {
		"Balance": {
			"type": "embedsOne",
			"model": "Balance",
			"property": "balance",
			"default": {}
		},
		"Social": {
			"type": "embedsOne",
			"model": "Social",
			"property": "social",
			"default": {}
		}
	},
	"acls": [
		{
			"property": "uploadAvatar",
			"principalType": "ROLE",
			"principalId": "$owner",
			"permission": "ALLOW"
		},
		{
			"property": "balance",
			"principalType": "ROLE",
			"principalId": "$owner",
			"permission": "ALLOW"
		}
	],
	"methods": {}
}