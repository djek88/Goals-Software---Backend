{
	"name": "Goal",
	"base": "PersistedModel",
	"strict": "throw",
	"options": {
		"mongodb": {
			"collection": "Goals"
		},
		"validateUpsert": true
	},
	"properties": {
		"_id": {
			"type": "ObjectId",
			"generated": true,
			"id": true
		},
		"name": {
			"type": "String",
			"required": true
		},
		"description": {
			"type": "String",
			"default": ""
		},
		"dueDate": {
			"type": "Date",
			"required": true
		},
		"state": {
			"type": "Number",
			"default": 1
		},
		"comments": {
			"type": "String",
			"default": ""
		},
		"evidences": {
			"type": ["String"],
			"default": []
		},
		"feedbacks": {
			"type": ["Object"],
			"default": []
		}
	},
	"mixins": {
		"TimeStamp": true
	},
	"hidden": ["updatedAt"],
	"validations": [],
	"relations": {
		"Votes": {
			"type": "embedsMany",
			"model": "Vote",
			"property": "votes",
			"default": [],
			"options": {
				"validate": true,
				"forceId": false
			}
		},
		"Owner": {
			"type": "belongsTo",
			"model": "Customer",
			"foreignKey": "_ownerId"
		},
		"Group": {
			"type": "belongsTo",
			"model": "Group",
			"foreignKey": "_groupId"
		}
	},
	"acls": [
		{
			"accessType": "*",
			"principalType": "ROLE",
			"principalId": "$everyone",
			"permission": "DENY"
		},
		{
			"accessType": "READ",
			"principalType": "ROLE",
			"principalId": "$authenticated",
			"permission": "ALLOW"
		},
		{
			"property": [
				"create",
				"__create__Votes",
				"leaveFeedback"
			],
			"principalType": "ROLE",
			"principalId": "$authenticated",
			"permission": "ALLOW"
		},
		{
			"property": [
				"updateAttributes",
				"addComments",
				"notifyGroupMembers",
				"uploadEvidence"
			],
			"principalType": "ROLE",
			"principalId": "$owner",
			"permission": "ALLOW"
		}
	],
	"methods": {}
}
