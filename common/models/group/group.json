{
	"name": "Group",
	"base": "PersistedModel",
	"strict": true,
	"options": {
		"mongodb": {
			"collection": "Groups"
		},
		"validateUpsert": true
	},
	"properties": {
		"_id": {
			"type": "ObjectId",
			"generated": true,
			"id": true
		},
		"name": {
			"type": "String",
			"required": true
		},
		"description": {
			"type": "String",
			"default": ""
		},
		"type": {
			"type": "Number",
			"default": 5
		},
		"penalty": {
			"type": "Number",
			"default": 20
		},
		"private": {
			"type": "Boolean",
			"default": true
		},
		"maxMembers": {
			"type": "Number",
			"default": 1
		},
		"memberCanInvite": {
			"type": "Boolean",
			"default": false
		}
	},
	"mixins": {
		"TimeStamp" : true
	},
	"hidden": ["updatedAt"],
	"validations": [],
	"relations": {
		"SessionConf": {
			"type": "embedsOne",
			"model": "SessionConf",
			"property": "sessionConf",
			"default": {},
			"options": {
				"validate": true,
				"forceId": false
			}
		},
		"Owner": {
			"type": "belongsTo",
			"model": "Customer",
			"foreignKey": "_ownerId"
		},
		"Members": {
			"type": "referencesMany",
			"model": "Customer",
			"foreignKey": "_memberIds",
			"default": []
		},
		"NextSession": {
			"type": "belongsTo",
			"model": "Session",
			"foreignKey": "_nextSessionId"
		},
		"LastSession": {
			"type": "belongsTo",
			"model": "Session",
			"foreignKey": "_lastSessionId"
		}
	},
	"acls": [
		{
			"accessType": "*",
			"principalType": "ROLE",
			"principalId": "$everyone",
			"permission": "DENY"
		},
		{
			"accessType": "READ",
			"principalType": "ROLE",
			"principalId": "$authenticated",
			"permission": "ALLOW"
		},
		{
			"property": "create",
			"principalType": "ROLE",
			"principalId": "$authenticated",
			"permission": "ALLOW"
		},
		{
			"property": [
				"activeJoinRequests"
			],
			"principalType": "ROLE",
			"principalId": "$everyone",
			"permission": "DENY"
		},
		{
			"property": [
				"updateAttributes",
				"deleteById",
				"__update__SessionConf",
				"changeGroupOwner",
				"activeJoinRequests",
				"approveRequest",
				"rejectRequest"
			],
			"principalType": "ROLE",
			"principalId": "$owner",
			"permission": "ALLOW"
		},
		{
			"property": [
				"__unlink__Members",
				"sendEmailToGroup",
				"sendEmailToMember",
				"inviteNewMembers",
				"requestToJoin"
			],
			"principalType": "ROLE",
			"principalId": "$authenticated",
			"permission": "ALLOW"
		},
		{
			"property": "baseGroupInfo",
			"principalType": "ROLE",
			"principalId": "$everyone",
			"permission": "ALLOW"
		}
	],
	"methods": {}
}
